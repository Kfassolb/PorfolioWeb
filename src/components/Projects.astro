---
import GitHub from "./icons/GitHub.astro";
import Javascript from "./icons/Javascript.astro";
import Html from "./icons/Html.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";
import Css from "./icons/Css.astro";
import PowerBi from "./icons/PowerBi.astro";

const TAGS = {
  JAVASCRIPT: {
    name: "Javascript",
    class: "bg-[#b86b21] text-white",
    icon: Javascript,
  },
  HTML: {
    name: "HTML",
    class: "bg-[#580000] text-white",
    icon: Html,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#003159] text-white",
    icon: Css,
  },
  POWERBI: {
    name: "PowerBi",
    class: "bg-[#00594b] text-white",
    icon: PowerBi,
  },
};
const PROJECTS = [
  {
    title: "Dashboard build with PowerBi",
    description:
      "manipulación de datos, creación de informes visuales impactantes",
    link: "https://app.powerbi.com/view?r=eyJrIjoiMDg3ZGIwOTQtMTM1MS00ZjM5LTg3NmYtNWEzNWY2ODc5MjU1IiwidCI6IjBlMGNiMDYwLTA5YWQtNDlmNS1hMDA1LTY4YjliNDlhYTFmNiIsImMiOjR9",
    image: "/projects/Dashboard.png",
    tags: [TAGS.POWERBI],
  },
  {
    title: "Rock Paper Scissors - Clásico juego",
    description:
      "Juego de piedra papel o tijera. Un proyecto del curso de Fundamentos de TheOdinProject. Desarrollado con Javascript, HTML y CSS",
    link: "https://kfassolb.github.io/Rock-Paper-Scissors/",
    github: "https://github.com/Kfassolb/Rock-Paper-Scissors",
    image: "/projects/RockPaperScissor.png",
    tags: [TAGS.JAVASCRIPT, TAGS.HTML, TAGS.CSS],
  },
  {
    title: "Etch a Sketch - Lienzo",
    description:
      "Project: Etch-a-Sketch - developed in the Foundationd Course (The Odin Project)",
    link: "https://kfassolb.github.io/Etch-a-Sketch/",
    github: "https://github.com/Kfassolb/Etch-a-Sketch",
    image: "/projects/EtchSketch.png",
    tags: [TAGS.JAVASCRIPT, TAGS.HTML, TAGS.CSS],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="projects"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
